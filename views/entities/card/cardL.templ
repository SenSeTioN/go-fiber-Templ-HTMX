package card

import "sensetion/go-fiber/views/shared/ui/title"
import "fmt"

type CardLProps struct {
	Text    string
	SubText string
	BGSrc   string
}

css CardLClass(props CardLProps) {
	background-image: { fmt.Sprintf("url(%s)", props.BGSrc) };
}

templ CardL(props CardLProps) {
	@CardLCSS()
	<article class={ CardLClass(props), "hero-posts" }>
		<div class="hero-posts__content">
			<div>
				@title.Title(title.TitleProps{
					Text:       props.Text,
					Size:       "25px",
					FontWeight: "400",
					Color:      "--color-accent",
				})
			</div>
			<div>
				@title.SubTitle(title.SubTitleProps{
					Text:  props.SubText,
					Color: "--color-primary",
					Size:  "14px",
				})
			</div>
		</div>
	</article>
}

templ CardLCSS() {
	<style>
		.hero-posts{
			display: flex;
			flex-direction: column;
			justify-content: flex-end;
			align-items: center;
			max-width: 360px;
			width: 100%;
			height: 455px;
			padding: 10px;
			background-position: center;
			background-repeat: no-repeat;
			background-size: cover;
			border-radius: var(--border-radius-m);
		}

		.hero-posts__content{
			display: flex;
			flex-direction: column;
			align-items: center;
			justify-content: center;
			gap: 16px;
			background-color: #FFFFFFBF;
			backdrop-filter: blur(10px);
			padding: 15px;
			border-radius: var(--border-radius-m);
		}
	</style>
}
