package mainTag

import "sensetion/go-fiber/views/features/posts"

templ MainTag() {
	@MainTagCSS()
	<main class="main-content">
		@posts.HeroPosts()
		@posts.Posts(posts.PostsProps{
			IsPopular: true,
		})
	</main>
}

templ MainTagCSS() {
	<style>
		.main-content{
			max-width: 1512px;
			width: 100%;
			display: flex;
			padding-inline: 45px;
			flex-direction: column;
			align-items: center;
			justify-content: center;
		}

	</style>
}
